// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URLL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String         @id @map("_id")
  create_at  DateTime       @default(now())
  first_name String
  last_name  String
  email      String         @unique
  password   String
  isAdmin    Boolean        @default(false)
  salt       String
  travels    Travel[]
  confirmeds Participants[] @relation("ConfirmedUsers")
  pendents   Participants[] @relation("PendingUsers")
}

model Travel {
  id                 String         @id @map("_id")
  value              String
  departure_location String
  destination        String
  seats              Int
  owner              User?          @relation(fields: [ownerId], references: [id])
  ownerId            String?
  participants       Participants[] @relation("ConfirmedUsers")
}

model Participants {
  id         String   @id @map("_id")
  confirmeds User[]   @relation("ConfirmedUsers")
  pendents   User[]   @relation("PendingUsers")
  travels    Travel[] @relation("ConfirmedUsers")
}
